{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "clean": {},
    "test": {},
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "@lucid-evolution/lucid#test": {
      "dependsOn": [
        "@lucid-evolution/provider#test"
      ]
    }
  }
}